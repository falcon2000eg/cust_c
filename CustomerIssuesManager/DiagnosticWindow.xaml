<Window x:Class="CustomerIssuesManager.DiagnosticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diagnostic Window" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🔍 نافذة التشخيص" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2c3e50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="هذه النافذة تساعد في تحديد مصدر رسائل الخطأ" 
                       FontSize="14" 
                       Foreground="#7f8c8d"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Log Display -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                BorderBrush="#e0e0e0" 
                BorderThickness="1"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="📋 سجل الأحداث:" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <Button x:Name="ClearButton" 
                            Content="مسح السجل" 
                            Margin="10,0,0,0"
                            Padding="10,5"
                            Background="#3498db"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ClearButton_Click"/>
                    <Button x:Name="CopyButton" 
                            Content="نسخ السجل" 
                            Margin="5,0,0,0"
                            Padding="10,5"
                            Background="#27ae60"
                            Foreground="White"
                            BorderThickness="0"
                            Click="CopyButton_Click"/>
                </StackPanel>
                
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox" 
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="11"
                             Background="#fafafa"
                             BorderThickness="0"
                             TextWrapping="Wrap"
                             VerticalAlignment="Stretch"/>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button x:Name="TestDatabaseButton" 
                    Content="اختبار قاعدة البيانات" 
                    Margin="5"
                    Padding="15,8"
                    Background="#e74c3c"
                    Foreground="White"
                    BorderThickness="0"
                    Click="TestDatabaseButton_Click"/>
            <Button x:Name="TestServicesButton" 
                    Content="اختبار الخدمات" 
                    Margin="5"
                    Padding="15,8"
                    Background="#f39c12"
                    Foreground="White"
                    BorderThickness="0"
                    Click="TestServicesButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="إغلاق" 
                    Margin="5"
                    Padding="15,8"
                    Background="#95a5a6"
                    Foreground="White"
                    BorderThickness="0"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 