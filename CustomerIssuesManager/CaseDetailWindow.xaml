<Window x:Class="CustomerIssuesManager.CaseDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="تفاصيل المشكلة" Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0">
            <TabItem Header="تفاصيل المشكلة">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="بيانات العميل" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم العميل:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="CustomerNameTextBox" Margin="5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="رقم المشترك:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="SubscriberNumberTextBox" Margin="5"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="رقم الهاتف:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="PhoneTextBox" Margin="5"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="العنوان:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="AddressTextBox" Margin="5"/>
                        </Grid>

                        <Separator Margin="0,15"/>

                        <TextBlock Text="تفاصيل المشكلة" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="تاريخ الاستلام:" VerticalAlignment="Center"/>
                            <DatePicker Grid.Row="0" Grid.Column="1" x:Name="ReceivedDatePicker" Margin="5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="التصنيف:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CategoryComboBox" Margin="5" DisplayMemberPath="CategoryName" SelectedValuePath="Id"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="الحالة:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="StatusComboBox" Margin="5" SelectionChanged="StatusComboBox_SelectionChanged"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="وصف المشكلة:" VerticalAlignment="Top" Margin="0,8,0,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="ProblemDescriptionTextBox" Margin="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="الإجراءات المتخذة:" VerticalAlignment="Top" Margin="0,8,0,0"/>
                            <TextBox Grid.Row="4" Grid.Column="1" x:Name="ActionsTakenTextBox" Margin="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="آخر قراءة للعداد:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="1" x:Name="LastMeterReadingTextBox" Margin="5"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="تاريخ آخر قراءة:" VerticalAlignment="Center"/>
                            <DatePicker Grid.Row="6" Grid.Column="1" x:Name="LastReadingDatePicker" Margin="5"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="مبلغ المديونية:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="7" Grid.Column="1" x:Name="DebtAmountTextBox" Margin="5"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="سجل التدقيق">
                <DataGrid x:Name="AuditLogDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm'}" Width="120"/>
                        <DataGridTextColumn Header="الإجراء" Binding="{Binding ActionType}" Width="80"/>
                        <DataGridTextColumn Header="الموظف" Binding="{Binding PerformedByName}" Width="120"/>
                        <DataGridTextColumn Header="الوصف" Binding="{Binding ActionDescription}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0">
            <Button x:Name="SaveButton" Content="حفظ" Padding="20,5" Style="{StaticResource SaveButton}" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="إلغاء" Padding="20,5" Margin="10,0,0,0" Style="{StaticResource DeleteButton}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
