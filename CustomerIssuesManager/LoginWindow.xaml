<Window x:Class="CustomerIssuesManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تسجيل الدخول" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Background="{StaticResource BgMainBrush}">
    <Border BorderBrush="{StaticResource BorderDarkBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" Padding="15">
                <StackPanel>
                    <TextBlock Text="تسجيل الدخول" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="نظام إدارة مشاكل العملاء" FontSize="12" Foreground="{StaticResource TextSubtleBrush}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="40">
                <TextBlock Text="رقم الأداء:" HorizontalAlignment="Right" Margin="0,0,0,5"/>
                <TextBox x:Name="PerformanceNumberTextBox" Padding="8" TextAlignment="Center" Margin="0,0,0,20"/>

                <Button Content="دخول" Click="LoginButton_Click" Style="{StaticResource SaveButton}" Padding="10" Margin="0,10,0,0"/>
                <Button Content="خروج" Click="ExitButton_Click" Style="{StaticResource DeleteButton}" Padding="10" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
