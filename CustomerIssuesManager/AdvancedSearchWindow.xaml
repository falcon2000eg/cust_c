<Window x:Class="CustomerIssuesManager.AdvancedSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="البحث المتقدم" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        Background="#f8f9fa">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <TextBlock Text="البحث المتقدم في المشاكل" 
                       FontSize="18" FontWeight="Bold" 
                       Foreground="#2c3e50" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
                            <TextBlock Text="استخدم المعايير أدناه للبحث المتقدم في المشاكل" 
                       FontSize="12" 
                       Foreground="#7f8c8d" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Search Criteria -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="المعلومات الأساسية" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,0">
                            <Label Content="اسم العميل:" FontWeight="Bold"/>
                            <TextBox x:Name="CustomerNameTextBox" Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">
                            <Label Content="رقم المشترك:" FontWeight="Bold"/>
                            <TextBox x:Name="SubscriberNumberTextBox" Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                            <Label Content="العنوان:" FontWeight="Bold"/>
                            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,0">
                            <Label Content="حالة المشكلة:" FontWeight="Bold"/>
                            <ComboBox x:Name="StatusComboBox" Margin="0,0,0,10" SelectionChanged="StatusComboBox_SelectionChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,0">
                            <Label Content="تصنيف المشكلة:" FontWeight="Bold"/>
                            <ComboBox x:Name="CategoryComboBox" Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Grid.Row="2" Margin="10,0,0,0">
                            <Label Content="اسم الموظف:" FontWeight="Bold"/>
                            <ComboBox x:Name="EmployeeComboBox" Margin="0,0,0,10"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Date Filters -->
                <GroupBox Header="فلاتر التاريخ" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="السنة:" FontWeight="Bold"/>
                            <ComboBox x:Name="YearComboBox" Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Label Content="نوع التاريخ:" FontWeight="Bold"/>
                            <ComboBox x:Name="DateFieldComboBox" Margin="0,0,0,10">
                                <ComboBoxItem Content="تاريخ الإنشاء" Tag="CreatedDate"/>
                                <ComboBoxItem Content="تاريخ الاستلام" Tag="ReceivedDate"/>
                                <ComboBoxItem Content="تاريخ التعديل" Tag="ModifiedDate"/>
                                <ComboBoxItem Content="تاريخ الحل" Tag="SolvedDate"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Content Search -->
                <GroupBox Header="البحث في المحتوى" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="البحث في المراسلات:" FontWeight="Bold"/>
                            <TextBox x:Name="CorrespondenceTextBox" Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Label Content="البحث في المرفقات:" FontWeight="Bold"/>
                            <TextBox x:Name="AttachmentTextBox" Margin="0,0,0,10"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Problem Details -->
                <GroupBox Header="تفاصيل المشكلة" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="وصف المشكلة:" FontWeight="Bold"/>
                            <TextBox x:Name="ProblemDescriptionTextBox" 
                                     Height="60" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,10"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Label Content="الإجراءات المتخذة:" FontWeight="Bold"/>
                            <TextBox x:Name="ActionsTakenTextBox" 
                                     Height="60" 
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,10"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="SearchButton" 
                    Content="بحث" 
                    Width="100" 
                    Height="35" 
                    Background="#3498db" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="0,0,10,0"
                    Click="SearchButton_Click"/>
            
            <Button x:Name="ClearButton" 
                    Content="مسح" 
                    Width="100" 
                    Height="35" 
                    Background="#95a5a6" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="0,0,10,0"
                    Click="ClearButton_Click"/>
            
            <Button x:Name="CancelButton" 
                    Content="إلغاء" 
                    Width="100" 
                    Height="35" 
                    Background="#e74c3c" 
                    Foreground="White" 
                    FontWeight="Bold"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 