<Window x:Class="CustomerIssuesManager.SettingsTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="اختبار الإعدادات الجديدة" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="اختبار الإعدادات الجديدة" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            <TextBlock Text="اختبار وظائف الإعدادات المحسنة" 
                       FontSize="14" 
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Test Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Import/Export Test -->
                <GroupBox Header="اختبار استيراد/تصدير الإعدادات" 
                          Margin="0,0,0,20"
                          BorderBrush="#3498DB"
                          BorderThickness="2">
                    <StackPanel Margin="10">
                        <TextBlock Text="اختبار وظائف استيراد وتصدير الإعدادات"
                                   FontSize="12"
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Button x:Name="TestExportButton"
                                    Content="اختبار التصدير"
                                    Width="150"
                                    Height="35"
                                    Margin="0,0,10,0"
                                    Background="#27AE60"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="TestExport_Click"/>
                            
                            <Button x:Name="TestImportButton"
                                    Content="اختبار الاستيراد"
                                    Width="150"
                                    Height="35"
                                    Background="#E67E22"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="TestImport_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Settings Change Test -->
                <GroupBox Header="اختبار تغيير الإعدادات" 
                          Margin="0,0,0,20"
                          BorderBrush="#9B59B6"
                          BorderThickness="2">
                    <StackPanel Margin="10">
                        <TextBlock Text="اختبار الإشعارات عند تغيير إعدادات المرفقات"
                                   FontSize="12"
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Button x:Name="TestAttachmentModeButton"
                                    Content="تغيير وضع المرفقات"
                                    Width="150"
                                    Height="35"
                                    Margin="0,0,10,0"
                                    Background="#9B59B6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="TestAttachmentMode_Click"/>
                            
                            <Button x:Name="TestOrganizeByDateButton"
                                    Content="تغيير تنظيم التاريخ"
                                    Width="150"
                                    Height="35"
                                    Background="#8E44AD"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="TestOrganizeByDate_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Validation Test -->
                <GroupBox Header="اختبار التحقق من صحة الإعدادات" 
                          Margin="0,0,0,20"
                          BorderBrush="#E74C3C"
                          BorderThickness="2">
                    <StackPanel Margin="10">
                        <TextBlock Text="اختبار وظائف التحقق من صحة الإعدادات"
                                   FontSize="12"
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Button x:Name="TestValidationButton"
                                    Content="اختبار التحقق"
                                    Width="150"
                                    Height="35"
                                    Margin="0,0,10,0"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="TestValidation_Click"/>
                            
                            <Button x:Name="TestInvalidSettingsButton"
                                    Content="إعدادات غير صحيحة"
                                    Width="150"
                                    Height="35"
                                    Background="#C0392B"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Click="TestInvalidSettings_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button x:Name="OpenSettingsButton"
                    Content="فتح إعدادات النظام"
                    Width="150"
                    Height="40"
                    Margin="0,0,10,0"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Click="OpenSettings_Click"/>
            
            <Button x:Name="CloseButton"
                    Content="إغلاق"
                    Width="120"
                    Height="40"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window> 