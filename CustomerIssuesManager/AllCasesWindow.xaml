<Window x:Class="CustomerIssuesManager.AllCasesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="جميع المشاكل" Height="600" Width="900" WindowStartupLocation="CenterScreen" FlowDirection="RightToLeft">
    <Grid>
        <DataGrid x:Name="CasesDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="رقم المشكلة" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="اسم العميل" Binding="{Binding CustomerName}" Width="150"/>
                <DataGridTextColumn Header="رقم المشترك" Binding="{Binding SubscriberNumber}" Width="120"/>
                <DataGridTextColumn Header="التصنيف" Binding="{Binding Category.CategoryName}" Width="120"/>
                <DataGridTextColumn Header="حالة المشكلة" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="تاريخ الإنشاء" Binding="{Binding CreatedDate, StringFormat=yyyy/MM/dd}" Width="120"/>
                <DataGridTextColumn Header="وصف المشكلة" Binding="{Binding ProblemDescription}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
