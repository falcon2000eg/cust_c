<Window x:Class="CustomerIssuesManager.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="نظام إدارة مشاكل العملاء" Height="400" Width="600"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent">
    <Border Background="{StaticResource HeaderBrush}" CornerRadius="10" Padding="20">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="نظام إدارة مشاكل العملاء" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Customer Issues Management System" FontSize="14" Foreground="#bdc3c7" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="الإصدار 5.0.0 - النسخة المحسنة" FontSize="12" Foreground="#3498db" HorizontalAlignment="Center"/>
                <TextBlock Text="مصطفى اسماعيل" FontSize="12" FontWeight="Bold" Foreground="#e67e22" HorizontalAlignment="Center" Margin="0,5,0,15"/>
                <TextBlock x:Name="StatusText" Text="جاري تحميل النظام..." FontSize="10" Foreground="#95a5a6" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                <ProgressBar IsIndeterminate="True" Height="5" Margin="0,5,0,0"/>
            </StackPanel>
            <TextBlock Text="تطوير: مساعد الذكي الاصطناعي - 2024" FontSize="8" Foreground="#7f8c8d" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        </Grid>
    </Border>
</Window>
